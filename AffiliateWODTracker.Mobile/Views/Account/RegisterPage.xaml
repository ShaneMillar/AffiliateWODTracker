<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             x:Class="AffiliateWODTracker.Mobile.Views.Account.RegisterPage">

    <StackLayout Padding="20" Spacing="15">
        <Entry x:Name="firstNameEntry" Placeholder="First Name" />
        <Entry x:Name="lastNameEntry" Placeholder="Last Name" />
        <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="phoneEntry" Placeholder="Phone Number" Keyboard="Telephone" />
        <Entry x:Name="addressEntry" Placeholder="Address" />
        <DatePicker x:Name="dobPicker" MaximumDate="{x:Static sys:DateTime.Now}" />
        <!-- You will need to implement the Affiliate Picker -->
        <Picker x:Name="affiliatePicker" Title="Select Crossfit Affiliate">
            <!-- ItemsSource will be bound to the list of affiliates -->
        </Picker>
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />
        <Button Text="Register" Clicked="OnRegisterClicked" />
    </StackLayout>

</ContentPage>
